include blocks/header.pug
    table(border="0" cellpadding="0" cellspacing="0" class="body" style={
      "border-collapse": "separate",
      "mso-table-lspace": "0pt",
      "mso-table-rspace": "0pt",
      width: "100%",
      "background-color": "#f6f6f6"
    })
        - const topTdStyle = {"font-family": "sans-serif", "font-size": "14px", "vertical-align": "top"}
        tbody
            tr
                td(style=topTdStyle) &nbsp;
                if file == 'registration'
                    include registration.pug
                else if file == 'forgot'
                    include forgot.pug
                else if file == 'password_changed'
                    include password_changed.pug
                td(style=topTdStyle) &nbsp;
